{
  "name": "camcom-assessment",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install:all": "npm install --workspaces --include-workspace-root",
    "dev": "concurrently \"npm run dev --workspace server\" \"npm start --workspace client\"",
    "build": "npm run build --workspace client",
    "start:prod": "NODE_ENV=production node server/index.js",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}




